@model IEnumerable<Q20240408.EntidadesDeNegocio.PersonaQ>

@{
    ViewData["Title"] = "Index";
}

<h1>N-Capas</h1>

<form asp-action="Index">
    <div class="row">
        <div class="form-group col-md-5">
            <label class="control-label">Nombre</label>
            <input type="text" name="nombreQ" class="form-control" />
        </div>
       
    </div>
    <br />
    <div class="row">
        <div class="form-group col-md-12">
            <input type="submit" value="Buscar" class="btn btn-primary" />|
            <a class="btn btn-dark" asp-action="Create">Crear Nueva persona</a>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.NombreQ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoQ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimientoQ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SueldoQ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusQ)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.NombreQ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoQ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimientoQ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SueldoQ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusQ)
            </td>
            <td>
                    <a class="btn btn-info btn-sm"@Html.ActionLink("Editar", "Edit", new { id = item.Id })></a>
                    <a class="btn btn-secondary btn-sm"@Html.ActionLink("Detalles", "Details", new { id = item.Id })></a>
                    <a class ="btn btn-danger btn-sm" @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })></a>
            </td>
        </tr>
}
    </tbody>
</table>

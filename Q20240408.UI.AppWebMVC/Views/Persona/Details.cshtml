            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" @Html.ActionLink("Editar", "Edit", new { id = Model.Id })> </a>
    <a asp-action="Index" class="btn btn-dark">Volver</a>
</div>

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>PersonaQ</h4>
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreQ)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreQ)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApellidoQ)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApellidoQ)
        </dd>
        <dt class = "col-sm-2">
